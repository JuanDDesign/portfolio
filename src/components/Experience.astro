---
import { getEntry } from "astro:content";

const experienceData = await getEntry("experience", Astro.currentLocale!);
const experiences = experienceData?.data ?? [];
---

<ol class="relative mt-16">
  {
    experiences.map(({ title, company, date, descriptions }) => (
      <li class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]">
        <header class="relative pb-12 md:col-span-2">
          <div class="sticky top-0">
            <span class="dark:text-purple-400 text-purple-600 -left-[42px] absolute rounded-full text-5xl">&bull;</span>
            <h3 class="text-balance text-xl font-bold dark:text-purple-400 text-purple-600">{title}</h3>
            <h4 class="text-balance font-semibold text-xl text-gray-600 dark:text-white">{company}</h4>
            <time class="p-0 m-0 text-balance text-sm text-gray-600/80 dark:text-white/80">{date}</time>
          </div>
        </header>

        <div class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3">
          {descriptions.map((content) => (
            <p class="text-pretty">{content}</p>
          ))}
        </div>
      </li>
    ))
  }
</ol>
